# CtxOS Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://ctxos_user:ctxos_password@localhost:5432/ctxos

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# External Services
ELASTICSEARCH_URL=http://localhost:9200

# BOSSNET Integration (Optional)
BOSSNET_API_KEY=your-bossnet-api-key
BOSSNET_BASE_URL=https://api.bossnet.example.com

# SIEM/SOAR Integration (Optional)
SIEM_WEBHOOK_URL=https://your-siem.example.com/webhook
SIEM_API_KEY=your-siem-api-key

# Monitoring & Observability
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001
JAEGER_URL=http://localhost:16686

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws

# Development Settings
LOG_LEVEL=INFO
ENABLE_CORS=true
ENABLE_PROFILING=false

# Production Settings (uncomment for production)
# DEBUG=false
# LOG_LEVEL=WARNING
# ENABLE_CORS=false
# ENABLE_PROFILING=false
