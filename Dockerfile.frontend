FROM node:18-alpine

WORKDIR /app

COPY package*.json ./

# Clean install only production deps
RUN npm ci --omit=dev

COPY . .

RUN npm run build

RUN npm install -g serve

EXPOSE 3000

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000 || exit 1

CMD ["serve", "-s", "dist", "-l", "3000"]
